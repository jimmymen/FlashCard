    <script type="module">
        // Firebase é…ç½®
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
        import { getFirestore, collection, doc, setDoc, getDoc, getDocs, updateDoc, deleteDoc, onSnapshot } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';
        import { getAuth, signInWithEmailAndPassword, createUserWithEmailAndPassword, signInWithPopup, GoogleAuthProvider, signOut, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';

        // âš ï¸ é‡è¦ï¼šè¿™é‡Œéœ€è¦æ›¿æ¢ä¸ºä½ çš„ Firebase é…ç½®
        const firebaseConfig = {
            apiKey: "AIzaSyDCKbNBGKJKNhfVH3_yNIUdUJDZJrOlhdU",
            authDomain: "flashcard-f9207.firebaseapp.com",
            databaseURL: "https://flashcard-f9207-default-rtdb.firebaseio.com",
            projectId: "flashcard-f9207",
            storageBucket: "flashcard-f9207.firebasestorage.app",
            messagingSenderId: "434986412944",
            appId: "1:434986412944:web:b2b2217ecedd81eabe2115",
            measurementId: "G-616727LSE4"
        };

        // åˆå§‹åŒ– Firebase
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);
        const googleProvider = new GoogleAuthProvider();

        // å…¨å±€å˜é‡
        let libraries = [];
        let currentLibrary = null;
        let questions = [];
        let currentIndex = 0;
        let showingAnswer = false;
        let studyMode = 'normal';
        let reviewFilters = [];
        let reviewQuestions = [];
        let currentUser = null;
        let unsubscribeLibraries = null;
        let unsubscribeQuestions = null;
        let unsubscribeProgress = null;

        // å°† Firebase ç›¸å…³å‡½æ•°æš´éœ²åˆ°å…¨å±€
        window.firebaseAuth = {
            loginWithGoogle,
            loginWithEmail,
            registerWithEmail,
            logout
        };

        // ç›‘å¬ç™»å½•çŠ¶æ€
        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                window.currentUser = user;
                document.getElementById('userEmail').textContent = user.email;
                showMainApp();
                loadUserData();
            } else {
                currentUser = null;
                window.currentUser = null;
                showLoginScreen();
                if (unsubscribeLibraries) unsubscribeLibraries();
                if (unsubscribeQuestions) unsubscribeQuestions();
                if (unsubscribeProgress) unsubscribeProgress();
            }
        });

        // Google ç™»å½•
        async function loginWithGoogle() {
            try {
                setSyncStatus('syncing', 'ç™»å½•ä¸­...');
                await signInWithPopup(auth, googleProvider);
            } catch (error) {
                console.error('Googleç™»å½•å¤±è´¥:', error);
                alert('ç™»å½•å¤±è´¥: ' + error.message);
                setSyncStatus('error', 'ç™»å½•å¤±è´¥');
            }
        }

        // é‚®ç®±ç™»å½•
        async function loginWithEmail() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            if (!email || !password) {
                alert('è¯·è¾“å…¥é‚®ç®±å’Œå¯†ç ');
                return;
            }
            
            try {
                setSyncStatus('syncing', 'ç™»å½•ä¸­...');
                await signInWithEmailAndPassword(auth, email, password);
            } catch (error) {
                console.error('é‚®ç®±ç™»å½•å¤±è´¥:', error);
                alert('ç™»å½•å¤±è´¥: ' + error.message);
                setSyncStatus('error', 'ç™»å½•å¤±è´¥');
            }
        }

        // é‚®ç®±æ³¨å†Œ
        async function registerWithEmail() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            if (!email || !password) {
                alert('è¯·è¾“å…¥é‚®ç®±å’Œå¯†ç ');
                return;
            }
            
            if (password.length < 6) {
                alert('å¯†ç è‡³å°‘éœ€è¦6ä½');
                return;
            }
            
            try {
                setSyncStatus('syncing', 'æ³¨å†Œä¸­...');
                await createUserWithEmailAndPassword(auth, email, password);
                alert('æ³¨å†ŒæˆåŠŸï¼');
            } catch (error) {
                console.error('æ³¨å†Œå¤±è´¥:', error);
                alert('æ³¨å†Œå¤±è´¥: ' + error.message);
                setSyncStatus('error', 'æ³¨å†Œå¤±è´¥');
            }
        }

        // é€€å‡ºç™»å½•
        async function logout() {
            try {
                await signOut(auth);
                libraries = [];
                currentLibrary = null;
                questions = [];
                currentIndex = 0;
                updateStats();
                updateLibrarySelector();
            } catch (error) {
                console.error('é€€å‡ºå¤±è´¥:', error);
                alert('é€€å‡ºå¤±è´¥: ' + error.message);
            }
        }

        // æ˜¾ç¤ºä¸åŒç•Œé¢
        function showLoginScreen() {
            document.getElementById('loginScreen').style.display = 'block';
            document.getElementById('loadingScreen').style.display = 'none';
            document.getElementById('mainApp').style.display = 'none';
        }

        function showLoadingScreen() {
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('loadingScreen').style.display = 'block';
            document.getElementById('mainApp').style.display = 'none';
        }

        function showMainApp() {
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('loadingScreen').style.display = 'none';
            document.getElementById('mainApp').style.display = 'block';
        }

        // è®¾ç½®åŒæ­¥çŠ¶æ€
        function setSyncStatus(status, text) {
            const indicator = document.getElementById('syncIndicator');
            const syncText = document.getElementById('syncText');
            
            indicator.className = 'sync-indicator ' + status;
            syncText.textContent = text;
        }

        // åŠ è½½ç”¨æˆ·æ•°æ®
        async function loadUserData() {
            if (!currentUser) return;
            
            try {
                setSyncStatus('syncing', 'åŒæ­¥ä¸­...');
                
                // å®æ—¶ç›‘å¬é¢˜åº“æ•°æ®
                const librariesRef = collection(db, 'users', currentUser.uid, 'libraries');
                unsubscribeLibraries = onSnapshot(librariesRef, (snapshot) => {
                    libraries = [];
                    snapshot.forEach((doc) => {
                        libraries.push({ id: doc.id, ...doc.data() });
                    });
                    libraries.sort((a, b) => new Date(a.createdAt) - new Date(b.createdAt));
                    
                    window.libraries = libraries;
                    updateLibrarySelector();
                    displayLibraryList();
                    
                    console.log('é¢˜åº“æ•°æ®å·²æ›´æ–°:', libraries.length, 'ä¸ªé¢˜åº“');
                });
                
                // ç›‘å¬å­¦ä¹ è¿›åº¦
                const progressRef = doc(db, 'users', currentUser.uid, 'settings', 'progress');
                unsubscribeProgress = onSnapshot(progressRef, (doc) => {
                    if (doc.exists()) {
                        const progress = doc.data();
                        const savedLibraryId = progress.currentLibraryId;
                        
                        // å¦‚æœæœ‰ä¿å­˜çš„é¢˜åº“ï¼Œè‡ªåŠ¨é€‰æ‹©
                        if (savedLibraryId && libraries.length > 0) {
                            const savedLibrary = libraries.find(lib => lib.id === savedLibraryId);
                            if (savedLibrary && savedLibrary.id !== currentLibrary?.id) {
                                currentLibrary = savedLibrary;
                                document.getElementById('librarySelect').value = savedLibrary.id;
                                loadLibraryQuestions(savedLibrary.id);
                                updateLibraryInfo();
                            }
                        }
                        
                        currentIndex = progress.currentIndex || 0;
                        studyMode = progress.studyMode || 'normal';
                        reviewFilters = progress.reviewFilters || [];
                        showingAnswer = progress.showingAnswer || false;
                        
                        if (studyMode === 'review' && reviewFilters.length > 0) {
                            reviewQuestions = questions.filter(q => reviewFilters.includes(q.mark));
                        }
                        
                        const currentQuestions = studyMode === 'review' ? reviewQuestions : questions;
                        if (currentIndex >= currentQuestions.length) {
                            currentIndex = 0;
                        }
                        
                        showQuestion();
                    }
                });
                
                setSyncStatus('synced', 'å·²åŒæ­¥');
                
            } catch (error) {
                console.error('åŠ è½½æ•°æ®å¤±è´¥:', error);
                setSyncStatus('error', 'åŒæ­¥å¤±è´¥');
            }
        }

        // åŠ è½½é¢˜åº“é¢˜ç›®
        async function loadLibraryQuestions(libraryId) {
            if (!currentUser || !libraryId) return;
            
            try {
                // å–æ¶ˆä¹‹å‰çš„ç›‘å¬
                if (unsubscribeQuestions) {
                    unsubscribeQuestions();
                }
                
                const questionsRef = collection(db, 'users', currentUser.uid, 'libraries', libraryId, 'questions');
                unsubscribeQuestions = onSnapshot(questionsRef, (snapshot) => {
                    questions = [];
                    snapshot.forEach((doc) => {
                        questions.push({ id: doc.id, ...doc.data() });
                    });
                    questions.sort((a, b) => a.order - b.order);
                    
                    window.questions = questions;
                    
                    updateStats();
                    displayQuestionList();
                    updateManageContent();
                    updateReviewContent();
                    
                    if (questions.length > 0) {
                        showQuestion();
                    }
                    
                    console.log('é¢˜ç›®æ•°æ®å·²æ›´æ–°:', questions.length, 'é“é¢˜ç›®');
                });
                
            } catch (error) {
                console.error('åŠ è½½é¢˜ç›®å¤±è´¥:', error);
                setSyncStatus('error', 'åŠ è½½å¤±è´¥');
            }
        }

        // ä¿å­˜é¢˜åº“åˆ°äº‘ç«¯
        async function saveLibraryToCloud(library) {
            if (!currentUser) return;
            
            try {
                const libraryRef = doc(db, 'users', currentUser.uid, 'libraries', library.id);
                await setDoc(libraryRef, {
                    ...library,
                    updatedAt: new Date()
                });
            } catch (error) {
                console.error('ä¿å­˜é¢˜åº“å¤±è´¥:', error);
                setSyncStatus('error', 'ä¿å­˜å¤±è´¥');
            }
        }

        // ä¿å­˜é¢˜ç›®åˆ°äº‘ç«¯
        async function saveQuestionToCloud(question, index) {
            if (!currentUser || !currentLibrary) return;
            
            try {
                const questionRef = doc(db, 'users', currentUser.uid, 'libraries', currentLibrary.id, 'questions', question.id || `q_${Date.now()}_${index}`);
                await setDoc(questionRef, {
                    ...question,
                    order: index,
                    updatedAt: new Date()
                });
            } catch (error) {
                console.error('ä¿å­˜é¢˜ç›®å¤±è´¥:', error);
                setSyncStatus('error', 'ä¿å­˜å¤±è´¥');
            }
        }

        // ä¿å­˜è¿›åº¦åˆ°äº‘ç«¯
        async function saveProgressToCloud() {
            if (!currentUser) return;
            
            try {
                const progressRef = doc(db, 'users', currentUser.uid, 'settings', 'progress');
                await setDoc(progressRef, {
                    currentLibraryId: currentLibrary?.id || null,
                    currentIndex,
                    studyMode,
                    reviewFilters,
                    showingAnswer,
                    updatedAt: new Date()
                });
            } catch (error) {
                console.error('ä¿å­˜è¿›åº¦å¤±è´¥:', error);
                setSyncStatus('error', 'ä¿å­˜å¤±è´¥');
            }
        }

        // åˆ é™¤é¢˜åº“
        async function deleteLibrary(libraryId) {
            if (!currentUser) return;
            
            try {
                setSyncStatus('syncing', 'åˆ é™¤ä¸­...');
                
                // åˆ é™¤é¢˜åº“ä¸‹çš„æ‰€æœ‰é¢˜ç›®
                const questionsRef = collection(db, 'users', currentUser.uid, 'libraries', libraryId, 'questions');
                const questionsSnapshot = await getDocs(questionsRef);
                const deleteQuestionPromises = questionsSnapshot.docs.map(doc => deleteDoc(doc.ref));
                await Promise.all(deleteQuestionPromises);
                
                // åˆ é™¤é¢˜åº“
                const libraryRef = doc(db, 'users', currentUser.uid, 'libraries', libraryId);
                await deleteDoc(libraryRef);
                
                // å¦‚æœåˆ é™¤çš„æ˜¯å½“å‰é¢˜åº“ï¼Œæ¸…ç©ºé€‰æ‹©
                if (currentLibrary && currentLibrary.id === libraryId) {
                    currentLibrary = null;
                    questions = [];
                    document.getElementById('librarySelect').value = '';
                    updateLibraryInfo();
                    updateStats();
                }
                
                setSyncStatus('synced', 'å·²åŒæ­¥');
            } catch (error) {
                console.error('åˆ é™¤é¢˜åº“å¤±è´¥:', error);
                setSyncStatus('error', 'åˆ é™¤å¤±è´¥');
            }
        }

        // å°†å‡½æ•°æš´éœ²åˆ°å…¨å±€ä½œç”¨åŸŸ
        window.loginWithGoogle = loginWithGoogle;
        window.loginWithEmail = loginWithEmail;
        window.registerWithEmail = registerWithEmail;
        window.logout = logout;
        window.saveLibraryToCloud = saveLibraryToCloud;
        window.saveQuestionToCloud = saveQuestionToCloud;
        window.saveProgressToCloud = saveProgressToCloud;
        window.deleteLibrary = deleteLibrary;
        window.loadLibraryQuestions = loadLibraryQuestions;
        
        // æš´éœ²å…¨å±€å˜é‡
        window.libraries = libraries;
        window.currentLibrary = currentLibrary;
        window.questions = questions;
        window.currentUser = currentUser;
        window.currentIndex = currentIndex;
        window.studyMode = studyMode;
        window.reviewFilters = reviewFilters;
        window.reviewQuestions = reviewQuestions;
        
        // é¡µé¢åŠ è½½å®Œæˆ
        window.addEventListener('load', () => {
            showLoadingScreen();
        });

    </script>

    <script>
        // åˆ‡æ¢æ ‡ç­¾é¡µ
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            
            const tabButton = document.querySelector(`.tab[onclick*="${tab}"]`);
            if (tabButton) {
                tabButton.classList.add('active');
            }
            
            document.getElementById(tab + 'Tab').classList.add('active');
            
            if (tab === 'manage') {
                updateManageContent();
            } else if (tab === 'review') {
                updateReviewContent();
            } else if (tab === 'libraries') {
                displayLibraryList();
            }
        }

        // æ›´æ–°é¢˜åº“é€‰æ‹©å™¨
        function updateLibrarySelector() {
            const select = document.getElementById('librarySelect');
            const currentValue = select.value;
            
            select.innerHTML = '<option value="">é€‰æ‹©é¢˜åº“...</option>';
            
            if (window.libraries) {
                window.libraries.forEach(library => {
                    const option = document.createElement('option');
                    option.value = library.id;
                    option.textContent = library.name;
                    select.appendChild(option);
                });
            }
            
            // æ¢å¤ä¹‹å‰çš„é€‰æ‹©
            if (currentValue && window.libraries?.find(lib => lib.id === currentValue)) {
                select.value = currentValue;
            }
        }

        // åˆ‡æ¢é¢˜åº“
        async function switchLibrary() {
            const select = document.getElementById('librarySelect');
            const libraryId = select.value;
            
            if (!libraryId) {
                currentLibrary = null;
                window.currentLibrary = null;
                questions = [];
                window.questions = [];
                updateLibraryInfo();
                updateStats();
                showQuestion();
                updateManageContent();
                updateReviewContent();
                return;
            }
            
            const library = window.libraries?.find(lib => lib.id === libraryId);
            if (library) {
                currentLibrary = library;
                window.currentLibrary = library;
                updateLibraryInfo();
                
                // é‡ç½®å­¦ä¹ çŠ¶æ€
                currentIndex = 0;
                window.currentIndex = 0;
                studyMode = 'normal';
                window.studyMode = 'normal';
                showingAnswer = false;
                window.showingAnswer = false;
                
                await window.loadLibraryQuestions(libraryId);
                await window.saveProgressToCloud();
            }
        }

        // æ›´æ–°é¢˜åº“ä¿¡æ¯æ˜¾ç¤º
        function updateLibraryInfo() {
            const infoDiv = document.getElementById('libraryInfo');
            const infoText = document.getElementById('libraryInfoText');
            
            if (currentLibrary) {
                const questionCount = window.questions?.length || 0;
                infoText.innerHTML = `
                    <strong>${currentLibrary.name}</strong> Â· ${questionCount} é“é¢˜ç›®<br>
                    ${currentLibrary.description ? `<small>${currentLibrary.description}</small>` : ''}
                `;
                infoDiv.style.display = 'block';
            } else {
                infoDiv.style.display = 'none';
            }
        }

        // æ˜¾ç¤ºæ–°å»ºé¢˜åº“è¡¨å•
        function showNewLibraryForm() {
            document.getElementById('newLibraryForm').classList.add('show');
            document.getElementById('newLibraryName').focus();
        }

        // éšè—æ–°å»ºé¢˜åº“è¡¨å•
        function hideNewLibraryForm() {
            document.getElementById('newLibraryForm').classList.remove('show');
            document.getElementById('newLibraryName').value = '';
            document.getElementById('newLibraryDesc').value = '';
        }

        // åˆ›å»ºé¢˜åº“
        async function createLibrary() {
            const name = document.getElementById('newLibraryName').value.trim();
            const description = document.getElementById('newLibraryDesc').value.trim();
            
            if (!name) {
                alert('è¯·è¾“å…¥é¢˜åº“åç§°');
                return;
            }
            
            if (!window.currentUser) {
                alert('è¯·å…ˆç™»å½•');
                return;
            }
            
            try {
                const library = {
                    id: `lib_${Date.now()}`,
                    name: name,
                    description: description,
                    createdAt: new Date(),
                    questionCount: 0
                };
                
                await window.saveLibraryToCloud(library);
                hideNewLibraryForm();
                
                // è‡ªåŠ¨é€‰æ‹©æ–°åˆ›å»ºçš„é¢˜åº“
                setTimeout(() => {
                    document.getElementById('librarySelect').value = library.id;
                    switchLibrary();
                }, 500);
                
                alert('é¢˜åº“åˆ›å»ºæˆåŠŸï¼');
                
            } catch (error) {
                console.error('åˆ›å»ºé¢˜åº“å¤±è´¥:', error);
                alert('åˆ›å»ºå¤±è´¥: ' + error.message);
            }
        }

        // æ˜¾ç¤ºé¢˜åº“åˆ—è¡¨
        function displayLibraryList() {
            const listElement = document.getElementById('libraryList');
            
            if (!window.libraries || window.libraries.length === 0) {
                listElement.innerHTML = '<div class="no-data">è¿˜æ²¡æœ‰é¢˜åº“ï¼Œç‚¹å‡»"æ–°å»ºé¢˜åº“"åˆ›å»ºç¬¬ä¸€ä¸ªé¢˜åº“</div>';
                return;
            }
            
            listElement.innerHTML = window.libraries.map(library => {
                const questionCount = library.questionCount || 0;
                const isActive = currentLibrary && currentLibrary.id === library.id;
                
                return `
                    <div class="library-item ${isActive ? 'active' : ''}">
                        <div>
                            <div class="library-name">${library.name}</div>
                            ${library.description ? `<div class="library-desc">${library.description}</div>` : ''}
                        </div>
                        <div>
                            <div class="library-stats">${questionCount} é“é¢˜ç›®</div>
                            <div class="library-actions">
                                <button class="btn btn-primary btn-small" onclick="selectLibrary('${library.id}')">é€‰æ‹©</button>
                                <button class="btn btn-warning btn-small" onclick="renameLibrary('${library.id}')">é‡å‘½å</button>
                                <button class="btn btn-secondary btn-small" onclick="deleteLibraryConfirm('${library.id}')">åˆ é™¤</button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // é€‰æ‹©é¢˜åº“
        function selectLibrary(libraryId) {
            document.getElementById('librarySelect').value = libraryId;
            switchLibrary();
            switchTab('study');
        }

        // é‡å‘½åé¢˜åº“
        async function renameLibrary(libraryId) {
            const library = window.libraries?.find(lib => lib.id === libraryId);
            if (!library) return;
            
            const newName = prompt('è¯·è¾“å…¥æ–°çš„é¢˜åº“åç§°:', library.name);
            if (!newName || newName.trim() === library.name) return;
            
            try {
                const updatedLibrary = { ...library, name: newName.trim() };
                await window.saveLibraryToCloud(updatedLibrary);
                alert('é‡å‘½åæˆåŠŸï¼');
            } catch (error) {
                alert('é‡å‘½åå¤±è´¥: ' + error.message);
            }
        }

        // åˆ é™¤é¢˜åº“ç¡®è®¤
        function deleteLibraryConfirm(libraryId) {
            const library = window.libraries?.find(lib => lib.id === libraryId);
            if (!library) return;
            
            if (confirm(`ç¡®å®šè¦åˆ é™¤é¢˜åº“"${library.name}"å—ï¼Ÿ\n\næ­¤æ“ä½œå°†åˆ é™¤é¢˜åº“ä¸‹çš„æ‰€æœ‰é¢˜ç›®ï¼Œä¸”ä¸å¯æ¢å¤ã€‚`)) {
                window.deleteLibrary(libraryId);
            }
        }

        // æ›´æ–°é¢˜ç›®ç®¡ç†å†…å®¹
        function updateManageContent() {
            const manageContent = document.getElementById('manageContent');
            
            if (!currentLibrary) {
                manageContent.innerHTML = '<div class="no-data">ğŸ“š è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“</div>';
                return;
            }
            
            manageContent.innerHTML = `
                <div class="import-section">
                    <h3>ğŸ“¥ å¯¼å…¥é¢˜ç›®åˆ° "${currentLibrary.name}"</h3>
                    <div class="import-methods">
                        <div class="import-method" onclick="showTextImport()">
                            <h4>ğŸ“ æ–‡æœ¬å¯¼å…¥</h4>
                            <p>å¤åˆ¶ç²˜è´´é¢˜ç›®æ–‡æœ¬</p>
                        </div>
                        <div class="import-method" onclick="document.getElementById('fileInput').click()">
                            <h4>ğŸ“ æ–‡ä»¶å¯¼å…¥</h4>
                            <p>é€‰æ‹©txtæ–‡ä»¶</p>
                        </div>
                    </div>
                    
                    <div id="textImportArea" style="display: none;">
                        <textarea id="importText" class="textarea-input" placeholder="è¯·è¾“å…¥é¢˜ç›®ï¼Œæ”¯æŒä»¥ä¸‹æ ¼å¼ï¼š

æ ¼å¼1ï¼ˆç©ºè¡Œåˆ†éš”ï¼‰ï¼š
è¿™æ˜¯ç¬¬ä¸€é“é¢˜ç›®ï¼Ÿ
è¿™æ˜¯ç¬¬ä¸€é“é¢˜çš„ç­”æ¡ˆ

è¿™æ˜¯ç¬¬äºŒé“é¢˜ç›®ï¼Ÿ
è¿™æ˜¯ç¬¬äºŒé“é¢˜çš„ç­”æ¡ˆ

æ ¼å¼2ï¼ˆæ ‡è®°ç¬¦ï¼‰ï¼š
Q: è¿™æ˜¯ç¬¬ä¸€é“é¢˜ç›®ï¼Ÿ
A: è¿™æ˜¯ç¬¬ä¸€é“é¢˜çš„ç­”æ¡ˆ

Q: è¿™æ˜¯ç¬¬äºŒé“é¢˜ç›®ï¼Ÿ
A: è¿™æ˜¯ç¬¬äºŒé“é¢˜çš„ç­”æ¡ˆ

æ ¼å¼3ï¼ˆåºå·ï¼‰ï¼š
1. è¿™æ˜¯ç¬¬ä¸€é“é¢˜ç›®ï¼Ÿ
ç­”æ¡ˆï¼šè¿™æ˜¯ç¬¬ä¸€é“é¢˜çš„ç­”æ¡ˆ

2. è¿™æ˜¯ç¬¬äºŒé“é¢˜ç›®ï¼Ÿ
ç­”æ¡ˆï¼šè¿™æ˜¯ç¬¬äºŒé“é¢˜çš„ç­”æ¡ˆ"></textarea>
                        <div class="controls">
                            <button class="btn btn-primary" onclick="importQuestions()">å¯¼å…¥é¢˜ç›®</button>
                            <button class="btn btn-secondary" onclick="hideTextImport()">å–æ¶ˆ</button>
                        </div>
                    </div>
                    
                    <input type="file" id="fileInput" class="file-input" accept=".txt" onchange="importFromFile(event)">
                </div>
                
                <div>
                    <h3>ğŸ“‹ é¢˜ç›®åˆ—è¡¨ (<span id="questionCount">${window.questions?.length || 0}</span>é¢˜)</h3>
                    <div id="questionList" class="question-list"></div>
                    <div class="controls">
                        <button class="btn btn-primary" onclick="showTextImport()">ğŸ“ æ‰‹åŠ¨æ·»åŠ é¢˜ç›®</button>
                        <button class="btn btn-secondary" onclick="exportQuestions()">ğŸ“¤ å¯¼å‡ºé¢˜ç›®</button>
                        <button class="btn btn-secondary" onclick="clearAllQuestions()">ğŸ—‘ï¸ æ¸…ç©ºæ‰€æœ‰é¢˜ç›®</button>
                    </div>
                </div>
            `;
            
            displayQuestionList();
        }

        // æ›´æ–°å¤ä¹ æ¨¡å¼å†…å®¹
        function updateReviewContent() {
            const reviewContent = document.getElementById('reviewContent');
            
            if (!currentLibrary) {
                reviewContent.innerHTML = '<div class="no-data">ğŸ“š è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“</div>';
                return;
            }
            
            reviewContent.innerHTML = `
                <div class="review-filters">
                    <button class="filter-btn uncertain" onclick="toggleFilter('uncertain')">ä¸ç¡®å®š</button>
                    <button class="filter-btn important" onclick="toggleFilter('important')">é‡è¦</button>
                    <button class="filter-btn difficult" onclick="toggleFilter('difficult')">æ˜“é”™</button>
                    <button class="btn btn-primary" onclick="startReview()">å¼€å§‹å¤ä¹ </button>
                </div>
                <div id="reviewContentInner">
                    <div class="no-data">
                        <p>ğŸ”„ è¯·é€‰æ‹©è¦å¤ä¹ çš„æ ‡è®°ç±»å‹ï¼Œç„¶åç‚¹å‡»"å¼€å§‹å¤ä¹ "</p>
                    </div>
                </div>
            `;
            
            updateReviewFiltersDisplay();
        }

        // æ˜¾ç¤ºæ–‡æœ¬å¯¼å…¥åŒºåŸŸ
        function showTextImport() {
            if (!currentLibrary) {
                alert('è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“');
                return;
            }
            document.getElementById('textImportArea').style.display = 'block';
        }

        // éšè—æ–‡æœ¬å¯¼å…¥åŒºåŸŸ
        function hideTextImport() {
            document.getElementById('textImportArea').style.display = 'none';
            document.getElementById('importText').value = '';
        }

        // è§£æé¢˜ç›®æ–‡æœ¬
        function parseQuestions(text) {
            const questions = [];
            const lines = text.split('\n').map(line => line.trim()).filter(line => line);
            
            // æ ¼å¼1: Q: A: æ ‡è®°ç¬¦æ ¼å¼
            if (text.includes('Q:') && text.includes('A:')) {
                let currentQ = '';
                let currentA = '';
                let isQuestion = false;
                
                for (let line of lines) {
                    if (line.startsWith('Q:') || line.startsWith('é—®ï¼š')) {
                        if (currentQ && currentA) {
                            questions.push({
                                id: `q_${Date.now()}_${questions.length}`,
                                question: currentQ,
                                answer: currentA,
                                mark: 'unmarked',
                                studied: false,
                                order: questions.length
                            });
                        }
                        currentQ = line.replace(/^(Q:|é—®ï¼š)/, '').trim();
                        currentA = '';
                        isQuestion = true;
                    } else if (line.startsWith('A:') || line.startsWith('ç­”ï¼š')) {
                        currentA = line.replace(/^(A:|ç­”ï¼š)/, '').trim();
                        isQuestion = false;
                    } else if (isQuestion) {
                        currentQ += ' ' + line;
                    } else {
                        currentA += ' ' + line;
                    }
                }
                
                if (currentQ && currentA) {
                    questions.push({
                        id: `q_${Date.now()}_${questions.length}`,
                        question: currentQ,
                        answer: currentA,
                        mark: 'unmarked',
                        studied: false,
                        order: questions.length
                    });
                }
            }
            // æ ¼å¼2: åºå·æ ¼å¼
            else if (/^\d+\./.test(lines[0])) {
                let currentQ = '';
                let currentA = '';
                
                for (let line of lines) {
                    if (/^\d+\./.test(line)) {
                        if (currentQ && currentA) {
                            questions.push({
                                id: `q_${Date.now()}_${questions.length}`,
                                question: currentQ,
                                answer: currentA,
                                mark: 'unmarked',
                                studied: false,
                                order: questions.length
                            });
                        }
                        currentQ = line.replace(/^\d+\./, '').trim();
                        currentA = '';
                    } else if (line.startsWith('ç­”æ¡ˆï¼š') || line.startsWith('ç­”ï¼š')) {
                        currentA = line.replace(/^(ç­”æ¡ˆï¼š|ç­”ï¼š)/, '').trim();
                    } else if (currentQ && !currentA) {
                        currentQ += ' ' + line;
                    } else if (currentA) {
                        currentA += ' ' + line;
                    }
                }
                
                if (currentQ && currentA) {
                    questions.push({
                        id: `q_${Date.now()}_${questions.length}`,
                        question: currentQ,
                        answer: currentA,
                        mark: 'unmarked',
                        studied: false,
                        order: questions.length
                    });
                }
            }
            // æ ¼å¼3: ç©ºè¡Œåˆ†éš”æ ¼å¼
            else {
                const allLines = text.split('\n').map(line => line.trim());
                let i = 0;
                
                while (i < allLines.length) {
                    if (allLines[i]) {
                        const question = allLines[i];
                        i++;
                        
                        while (i < allLines.length && !allLines[i]) {
                            i++;
                        }
                        
                        if (i < allLines.length && allLines[i]) {
                            const answer = allLines[i];
                            questions.push({
                                id: `q_${Date.now()}_${questions.length}`,
                                question: question,
                                answer: answer,
                                mark: 'unmarked',
                                studied: false,
                                order: questions.length
                            });
                        }
                    }
                    i++;
                }
            }
            
            return questions;
        }

        // å¯¼å…¥é¢˜ç›®
        async function importQuestions() {
            if (!window.currentUser) {
                alert('è¯·å…ˆç™»å½•å†å¯¼å…¥é¢˜ç›®');
                return;
            }
            
            if (!currentLibrary) {
                alert('è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“');
                return;
            }
            
            const text = document.getElementById('importText').value.trim();
            if (!text) {
                alert('è¯·è¾“å…¥é¢˜ç›®å†…å®¹');
                return;
            }
            
            const newQuestions = parseQuestions(text);
            if (newQuestions.length === 0) {
                alert('æœªèƒ½è§£æå‡ºé¢˜ç›®ï¼Œè¯·æ£€æŸ¥æ ¼å¼');
                return;
            }
            
            try {
                if (!window.questions) {
                    window.questions = [];
                }
                
                // ä¿å­˜åˆ°äº‘ç«¯
                for (let i = 0; i < newQuestions.length; i++) {
                    newQuestions[i].order = window.questions.length + i;
                    await window.saveQuestionToCloud(newQuestions[i], window.questions.length + i);
                }
                
                // æ›´æ–°é¢˜åº“çš„é¢˜ç›®æ•°é‡
                currentLibrary.questionCount = (currentLibrary.questionCount || 0) + newQuestions.length;
                await window.saveLibraryToCloud(currentLibrary);
                
                hideTextImport();
                alert(`æˆåŠŸå¯¼å…¥ ${newQuestions.length} é“é¢˜ç›®åˆ° "${currentLibrary.name}"`);
                
                // å¦‚æœæ˜¯ç¬¬ä¸€æ¬¡å¯¼å…¥ï¼Œåˆ‡æ¢åˆ°å­¦ä¹ æ¨¡å¼
                if (window.questions.length === 0) {
                    setTimeout(() => {
                        switchTab('study');
                    }, 1000);
                }
                
            } catch (error) {
                console.error('å¯¼å…¥å¤±è´¥:', error);
                alert('å¯¼å…¥å¤±è´¥: ' + error.message);
            }
        }

        // ä»æ–‡ä»¶å¯¼å…¥
        function importFromFile(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('importText').value = e.target.result;
                showTextImport();
            };
            reader.readAsText(file);
        }

        // æ˜¾ç¤ºé¢˜ç›®åˆ—è¡¨
        function displayQuestionList() {
            const listElement = document.getElementById('questionList');
            const countElement = document.getElementById('questionCount');
            
            if (!listElement || !countElement) return;
            
            const currentQuestions = window.questions || [];
            
            countElement.textContent = currentQuestions.length;
            
            if (currentQuestions.length === 0) {
                listElement.innerHTML = '<div class="no-data">è¿˜æ²¡æœ‰é¢˜ç›®</div>';
                return;
            }
            
            listElement.innerHTML = currentQuestions.map((q, index) => {
                const markText = {
                    'unmarked': '',
                    'uncertain': 'ä¸ç¡®å®š',
                    'important': 'é‡è¦',
                    'difficult': 'æ˜“é”™'
                }[q.mark];
                
                const markColor = {
                    'unmarked': 'transparent',
                    'uncertain': '#fbbf24',
                    'important': '#ef4444',
                    'difficult': '#8b5cf6'
                }[q.mark];
                
                return `
                    <div class="question-item">
                        ${markText ? `<span class="question-mark" style="background-color: ${markColor}">${markText}</span>` : ''}
                        <div class="question-text">${q.question}</div>
                        <div class="answer-text">${q.answer}</div>
                    </div>
                `;
            }).join('');
        }

        // æ˜¾ç¤ºå½“å‰é¢˜ç›®
        function showQuestion() {
            const studyContent = document.getElementById('studyContent');
            
            if (!currentLibrary) {
                studyContent.innerHTML = '<div class="no-data">ğŸ“š è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“ï¼Œæˆ–åˆ›å»ºæ–°é¢˜åº“</div>';
                return;
            }
            
            if (!window.questions) window.questions = [];
            if (!window.reviewQuestions) window.reviewQuestions = [];
            if (typeof window.showingAnswer === 'undefined') window.showingAnswer = false;
            
            const currentShowingAnswer = window.showingAnswer || showingAnswer || false;
            const currentStudyMode = window.studyMode || studyMode || 'normal';
            const currentCurrentIndex = window.currentIndex || currentIndex || 0;
            
            if (currentStudyMode === 'normal' && window.questions.length === 0) {
                studyContent.innerHTML = `<div class="no-data">ğŸ“š é¢˜åº“ "${currentLibrary.name}" è¿˜æ²¡æœ‰é¢˜ç›®<br><small>è¯·åœ¨"é¢˜ç›®ç®¡ç†"ä¸­æ·»åŠ é¢˜ç›®</small></div>`;
                return;
            }
            
            if (currentStudyMode === 'review' && window.reviewQuestions.length === 0) {
                studyContent.innerHTML = '<div class="no-data">ğŸ¯ æ²¡æœ‰ç¬¦åˆç­›é€‰æ¡ä»¶çš„é¢˜ç›®</div>';
                return;
            }
            
            const currentQuestions = currentStudyMode === 'review' ? window.reviewQuestions : window.questions;
            const currentQ = currentQuestions[currentCurrentIndex];
            
            if (!currentQ) {
                studyContent.innerHTML = '<div class="no-data">ğŸ‰ æ‰€æœ‰é¢˜ç›®å·²å®Œæˆï¼</div>';
                return;
            }
            
            const markButtons = `
                <div class="mark-buttons">
                    <button class="mark-btn ${currentQ.mark === 'unmarked' ? 'active' : ''} unmarked" onclick="setMark('unmarked')">æ— æ ‡è®°</button>
                    <button class="mark-btn ${currentQ.mark === 'uncertain' ? 'active' : ''} uncertain" onclick="setMark('uncertain')">ä¸ç¡®å®š</button>
                    <button class="mark-btn ${currentQ.mark === 'important' ? 'active' : ''} important" onclick="setMark('important')">é‡è¦</button>
                    <button class="mark-btn ${currentQ.mark === 'difficult' ? 'active' : ''} difficult" onclick="setMark('difficult')">æ˜“é”™</button>
                </div>
            `;
            
            studyContent.innerHTML = `
                <div class="study-card">
                    <div class="question">${currentQ.question}</div>
                    <div class="answer ${currentShowingAnswer ? 'show' : ''}" id="answerDiv">${currentQ.answer}</div>
                </div>
                ${markButtons}
                <div class="controls">
                    <button class="btn btn-primary" id="showAnswerBtn" onclick="toggleAnswer()">${currentShowingAnswer ? 'éšè—ç­”æ¡ˆ' : 'æ˜¾ç¤ºç­”æ¡ˆ'}</button>
                    <button class="btn btn-secondary" onclick="nextQuestion()">ä¸‹ä¸€é¢˜ (${currentCurrentIndex + 1}/${currentQuestions.length})</button>
                </div>
            `;
        }

        // åˆ‡æ¢ç­”æ¡ˆæ˜¾ç¤º
        async function toggleAnswer() {
            const answerDiv = document.getElementById('answerDiv');
            const showAnswerBtn = document.getElementById('showAnswerBtn');
            
            if (showingAnswer) {
                answerDiv.classList.remove('show');
                showAnswerBtn.textContent = 'æ˜¾ç¤ºç­”æ¡ˆ';
                showingAnswer = false;
                window.showingAnswer = false;
            } else {
                answerDiv.classList.add('show');
                showAnswerBtn.textContent = 'éšè—ç­”æ¡ˆ';
                showingAnswer = true;
                window.showingAnswer = true;
                
                // æ ‡è®°ä¸ºå·²å­¦ä¹ 
                const currentQuestions = studyMode === 'review' ? reviewQuestions : questions;
                const currentQ = currentQuestions[currentIndex];
                if (currentQ && !currentQ.studied) {
                    currentQ.studied = true;
                    await window.saveQuestionToCloud(currentQ, currentQ.order);
                    updateStats();
                }
            }
            
            await window.saveProgressToCloud();
        }

        // ä¸‹ä¸€é¢˜
        async function nextQuestion() {
            const currentQuestions = studyMode === 'review' ? reviewQuestions : questions;
            
            if (currentIndex < currentQuestions.length - 1) {
                currentIndex++;
                window.currentIndex++;
            } else {
                currentIndex = 0;
                window.currentIndex = 0;
            }
            
            showingAnswer = false;
            window.showingAnswer = false;
            await window.saveProgressToCloud();
            showQuestion();
        }

        // è®¾ç½®é¢˜ç›®æ ‡è®°
        async function setMark(mark) {
            const currentQuestions = studyMode === 'review' ? reviewQuestions : questions;
            const currentQ = currentQuestions[currentIndex];
            
            if (!currentQ) return;
            
            currentQ.mark = mark;
            
            // å¦‚æœåœ¨å¤ä¹ æ¨¡å¼ï¼ŒåŒæ—¶æ›´æ–°åŸå§‹æ•°ç»„ä¸­çš„é¢˜ç›®
            if (studyMode === 'review') {
                const originalQ = questions.find(q => q.id === currentQ.id);
                if (originalQ) {
                    originalQ.mark = mark;
                }
            }
            
            await window.saveQuestionToCloud(currentQ, currentQ.order);
            updateStats();
            
            // æ›´æ–°æ ‡è®°æŒ‰é’®çŠ¶æ€
            document.querySelectorAll('.mark-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            const targetBtn = document.querySelector(`.mark-btn.${mark}`);
            if (targetBtn) {
                targetBtn.classList.add('active');
            }
        }

        // å¤ä¹ æ¨¡å¼ - åˆ‡æ¢ç­›é€‰å™¨
        function toggleFilter(filter) {
            const btn = event.target;
            
            if (!window.reviewFilters) window.reviewFilters = [];
            
            if (window.reviewFilters.includes(filter)) {
                window.reviewFilters = window.reviewFilters.filter(f => f !== filter);
                reviewFilters = window.reviewFilters;
                btn.classList.remove('selected');
            } else {
                window.reviewFilters.push(filter);
                reviewFilters = window.reviewFilters;
                btn.classList.add('selected');
            }
            
            updateReviewStatus();
        }

        // æ›´æ–°å¤ä¹ çŠ¶æ€æ˜¾ç¤º
        function updateReviewStatus() {
            const reviewContentInner = document.getElementById('reviewContentInner');
            if (!reviewContentInner) return;
            
            if (!window.questions || !window.reviewFilters) return;
            
            const matchingCount = window.questions.filter(q => window.reviewFilters.includes(q.mark)).length;
            const statusText = window.reviewFilters.length > 0 ? 
                `å·²é€‰æ‹©: ${window.reviewFilters.join('ã€')} (${matchingCount}é“é¢˜ç›®)` : 
                'è¯·é€‰æ‹©è¦å¤ä¹ çš„æ ‡è®°ç±»å‹ï¼Œç„¶åç‚¹å‡»"å¼€å§‹å¤ä¹ "';
            
            reviewContentInner.innerHTML = `
                <div class="no-data">
                    <p>ğŸ”„ ${statusText}</p>
                    <small style="color: #888; margin-top: 10px; display: block;">
                        ${window.reviewFilters.length > 0 ? 'ç‚¹å‡»"å¼€å§‹å¤ä¹ "å¼€å§‹å­¦ä¹ ' : 'æç¤ºï¼šéœ€è¦å…ˆåœ¨å­¦ä¹ æ¨¡å¼ä¸­æ ‡è®°é¢˜ç›®ï¼Œæ‰èƒ½åœ¨å¤ä¹ æ¨¡å¼ä¸­çœ‹åˆ°'}
                    </small>
                </div>
            `;
        }

        // æ›´æ–°å¤ä¹ ç­›é€‰å™¨æ˜¾ç¤º
        function updateReviewFiltersDisplay() {
            if (!window.reviewFilters) window.reviewFilters = [];
            
            document.querySelectorAll('.filter-btn').forEach(btn => {
                const filter = btn.textContent === 'ä¸ç¡®å®š' ? 'uncertain' : 
                             btn.textContent === 'é‡è¦' ? 'important' : 'difficult';
                if (window.reviewFilters.includes(filter)) {
                    btn.classList.add('selected');
                } else {
                    btn.classList.remove('selected');
                }
            });
            
            updateReviewStatus();
        }

        // å¼€å§‹å¤ä¹ 
        async function startReview() {
            if (!currentLibrary) {
                alert('è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“');
                return;
            }
            
            if (!window.reviewFilters || window.reviewFilters.length === 0) {
                alert('è¯·å…ˆé€‰æ‹©è¦å¤ä¹ çš„æ ‡è®°ç±»å‹');
                return;
            }
            
            if (!window.questions || window.questions.length === 0) {
                alert('é¢˜åº“ä¸­è¿˜æ²¡æœ‰ä»»ä½•é¢˜ç›®');
                return;
            }
            
            window.reviewQuestions = window.questions.filter(q => window.reviewFilters.includes(q.mark));
            reviewQuestions = window.reviewQuestions;
            
            if (window.reviewQuestions.length === 0) {
                const markCounts = {
                    unmarked: window.questions.filter(q => q.mark === 'unmarked').length,
                    uncertain: window.questions.filter(q => q.mark === 'uncertain').length,
                    important: window.questions.filter(q => q.mark === 'important').length,
                    difficult: window.questions.filter(q => q.mark === 'difficult').length
                };
                
                alert(`æ²¡æœ‰æ‰¾åˆ°æ ‡è®°ä¸º ${window.reviewFilters.join('ã€')} çš„é¢˜ç›®ã€‚\n\nå½“å‰é¢˜ç›®çš„æ ‡è®°æƒ…å†µï¼š\nä¸ç¡®å®š: ${markCounts.uncertain}é“\né‡è¦: ${markCounts.important}é“\næ˜“é”™: ${markCounts.difficult}é“\næ— æ ‡è®°: ${markCounts.unmarked}é“`);
                return;
            }
            
            studyMode = 'review';
            window.studyMode = 'review';
            currentIndex = 0;
            window.currentIndex = 0;
            showingAnswer = false;
            window.showingAnswer = false;
            
            await window.saveProgressToCloud();
            
            switchTab('study');
            
            setTimeout(() => {
                showQuestion();
            }, 100);
            
            alert(`å¼€å§‹å¤ä¹ ï¼æ‰¾åˆ° ${window.reviewQuestions.length} é“ç¬¦åˆæ¡ä»¶çš„é¢˜ç›®ã€‚`);
        }

        // æ¸…ç©ºæ‰€æœ‰é¢˜ç›®
        async function clearAllQuestions() {
            if (!currentLibrary) {
                alert('è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“');
                return;
            }
            
            if (confirm(`ç¡®å®šè¦æ¸…ç©ºé¢˜åº“"${currentLibrary.name}"ä¸­çš„æ‰€æœ‰é¢˜ç›®å—ï¼Ÿæ­¤æ“ä½œä¸å¯æ¢å¤ã€‚`)) {
                try {
                    // åˆ é™¤é¢˜åº“ä¸‹çš„æ‰€æœ‰é¢˜ç›®
                    const questionsRef = collection(window.db, 'users', window.currentUser.uid, 'libraries', currentLibrary.id, 'questions');
                    const questionsSnapshot = await getDocs(questionsRef);
                    const deletePromises = questionsSnapshot.docs.map(doc => deleteDoc(doc.ref));
                    await Promise.all(deletePromises);
                    
                    // æ›´æ–°é¢˜åº“çš„é¢˜ç›®æ•°é‡
                    currentLibrary.questionCount = 0;
                    await window.saveLibraryToCloud(currentLibrary);
                    
                    currentIndex = 0;
                    window.currentIndex = 0;
                    studyMode = 'normal';
                    window.studyMode = 'normal';
                    await window.saveProgressToCloud();
                    
                    updateStats();
                    displayQuestionList();
                    showQuestion();
                    
                } catch (error) {
                    alert('æ¸…ç©ºå¤±è´¥: ' + error.message);
                }
            }
        }

        // å¯¼å‡ºé¢˜ç›®
        function exportQuestions() {
            if (!currentLibrary) {
                alert('è¯·å…ˆé€‰æ‹©ä¸€ä¸ªé¢˜åº“');
                return;
            }
            
            const currentQuestions = window.questions || [];
            
            if (currentQuestions.length === 0) {
                alert('æ²¡æœ‰é¢˜ç›®å¯ä»¥å¯¼å‡º');
                return;
            }
            
            let exportText = `é¢˜åº“: ${currentLibrary.name}\n`;
            if (currentLibrary.description) {
                exportText += `æè¿°: ${currentLibrary.description}\n`;
            }
            exportText += `å¯¼å‡ºæ—¶é—´: ${new Date().toLocaleString()}\n`;
            exportText += `é¢˜ç›®æ•°é‡: ${currentQuestions.length}\n\n`;
            
            currentQuestions.forEach((q, index) => {
                exportText += `${index + 1}. ${q.question}\n`;
                exportText += `ç­”æ¡ˆï¼š${q.answer}\n`;
                if (q.mark !== 'unmarked') {
                    const markText = {
                        'uncertain': 'ä¸ç¡®å®š',
                        'important': 'é‡è¦',
                        'difficult': 'æ˜“é”™'
                    }[q.mark];
                    exportText += `æ ‡è®°ï¼š${markText}\n`;
                }
                exportText += '\n';
            });
            
            const blob = new Blob([exportText], { type: 'text/plain;charset=utf-8' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${currentLibrary.name}_${new Date().toLocaleDateString().replace(/\//g, '-')}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
            
            alert(`æˆåŠŸå¯¼å‡ºé¢˜åº“"${currentLibrary.name}"çš„ ${currentQuestions.length} é“é¢˜ç›®`);
        }

        // æ›´æ–°ç»Ÿè®¡ä¿¡æ¯
        function updateStats() {
            const currentQuestions = window.questions || [];
            
            const total = currentQuestions.length;
            const studied = currentQuestions.filter(q => q.studied).length;
            const marked = currentQuestions.filter(q => q.mark !== 'unmarked').length;
            const progress = total > 0 ? Math.round((studied / total) * 100) : 0;
            
            document.getElementById('totalCount').textContent = total;
            document.getElementById('studiedCount').textContent = studied;
            document.getElementById('markedCount').textContent = marked;
            document.getElementById('progressPercent').textContent = progress + '%';
            document.getElementById('progressBar').style.width = progress + '%';
            
            // æ›´æ–°é¢˜åº“ä¿¡æ¯
            updateLibraryInfo();
        }

        // é”®ç›˜å¿«æ·é”®
        document.addEventListener('keydown', function(e) {
            if (e.target.tagName === 'TEXTAREA' || e.target.tagName === 'INPUT') {
                return;
            }
            
            switch(e.key) {
                case ' ':
                    e.preventDefault();
                    if (document.getElementById('showAnswerBtn')) {
                        toggleAnswer();
                    }
                    break;
                case 'ArrowRight':
                case 'Enter':
                    e.preventDefault();
                    nextQuestion();
                    break;
                case '1':
                    setMark('unmarked');
                    break;
                case '2':
                    setMark('uncertain');
                    break;
                case '3':
                    setMark('important');
                    break;
                case '4':
                    setMark('difficult');
                    break;
            }
        });
    </script>
</body>
</html>
